<?xml version="1.0" encoding="UTF-8"?>
<class name="SxFadingRichTextLabel" inherits="RichTextLabel" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../class.xsd">
    <brief_description>
        A wrapped RichTextLabel with a per-character fade-in effect.
    </brief_description>
    <description>
        A wrapped RichTextLabel with a per-character fade-in effect.

        image::images/nodes/SxFadingRichTextLabel.gif[align="center"]
    </description>
    <tutorials></tutorials>
    <methods>
        <method name="fade_in">
            <return type="void" />
            <description>
                Start the "fade in" animation.
            </description>
        </method>
        <method name="update_text">
            <return type="void" />
            <argument index="0" name="text" type="String" />
            <description>
                Update text to display and reset the animation. +
                It will not automatically replay the animation, even with `autoplay` set.

                [source,gdscript]
                .Example
                ----
                var label := $MyLabel as SxFadingRichTextLabel
                label.update_text("Hello!")
                label.fade_in()
                ----
            </description>
        </method>
    </methods>
    <members>
        <member name="autoplay" type="bool" default="false">
            Autoplay the text animation.
        </member>
        <member name="char_delay" type="float" default="0.1">
            Delay per character, in seconds.
        </member>
        <member name="fade_out_delay" type="float" default="2.0">
            Fade out delay, in seconds.
        </member>
        <member name="text_alignment" type="SxFadingRichTextLabel.Alignment" default="SxFadingRichTextLabel.Alignment.LEFT">
            Text alignment.
        </member>
    </members>
    <signals>
        <signal name="shown">
            <description>
                Text was completely shown.
            </description>
        </signal>
    </signals>
    <constants>
        <constant name="LEFT" value="0" enum="SxFadingRichTextLabel.Alignment">
            Left align.
        </constant>
        <constant name="RIGHT" value="1" enum="SxFadingRichTextLabel.Alignment">
            Right align.
        </constant>
    </constants>
</class>