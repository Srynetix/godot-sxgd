<?xml version="1.0" encoding="UTF-8"?>
<class name="SxSyncBarrier" inherits="Node" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../class.xsd">
    <brief_description>
        Simple network barrier.
    </brief_description>
    <description>
        Simple network barrier.
    </description>
    <tutorials></tutorials>
    <methods>
        <method name="set_server_peer">
            <return type="void" />
            <argument index="0" name="peer" type="SxServerPeer" />
            <description>
                Set the server peer for the barrier (mandatory before using it).
            </description>
        </method>
        <method name="await_peers">
            <return type="void" />
            <description>
                Wait for each peers to connect, or wait for the timeout.
                +
                This method will remove the barrier on completion/timeout.
            </description>
        </method>
    </methods>
    <members>
    </members>
    <signals>
    </signals>
    <constants>
        <constant name="NOT_READY" value="0" enum="SxSyncBarrier.BarrierJoinStatus">
            Barrier is waiting for clients.
        </constant>
        <constant name="OK" value="1" enum="SxSyncBarrier.BarrierJoinStatus">
            Barrier is ready, all clients are ready.
        </constant>
        <constant name="TIMEOUT" value="2" enum="SxSyncBarrier.BarrierJoinStatus">
            Barrier have timed out.
        </constant>
        <constant name="DEFAULT_TIMEOUT" value="60">
            Default barrier timeout value.
        </constant>
    </constants>
</class>